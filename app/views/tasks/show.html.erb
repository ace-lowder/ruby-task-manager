<%= render @task %>

<div class="d-flex justify-content-between align-items-center mt-3">
  <div>
    <%= link_to "Edit this task", edit_task_path(@task), class: "btn btn-primary me-2" %>
    <%= link_to "Back to tasks", tasks_path, class: "btn btn-secondary" %>
  </div>
  
  <div>
    <%= button_to "Destroy this task", @task, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
  </div>
</div>
