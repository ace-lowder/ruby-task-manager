<div id="<%= dom_id task %>">
  <p>
    <strong>Title:</strong>
    <%= task.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= task.description %>
  </p>

  <p>
    <strong>Priority:</strong>
    <% if task.priority == 1 %>
      Low
    <% elsif task.priority == 2 %>
      Medium
    <% else %>
      High
    <% end %>
  </p>

  <p>
    <strong>Completed:</strong>
    <%= task.completed ? "Yes" : "No" %>
  </p>
</div>
