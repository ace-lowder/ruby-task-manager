<div id="<%= dom_id task %>" class="card mb-4">
  <div class="card-body">
    <h4 class="card-title"><%= task.title %></h4>

    <p class="card-text">
      <strong>Description:</strong> <%= task.description %>
    </p>

    <p class="card-text">
      <strong>Priority:</strong>
      <% if task.priority == 1 %>
        <span class="badge bg-success">Low</span>
      <% elsif task.priority == 2 %>
        <span class="badge bg-warning text-dark">Medium</span>
      <% else %>
        <span class="badge bg-danger">High</span>
      <% end %>
    </p>

    <span class="card-text d-flex align-items-center">
      <strong class="me-2">Completed:</strong>
      <%= form_with model: task, local: true, html: { class: "d-inline" } do |form| %>
        <%= form.check_box :completed, checked: task.completed, onchange: 'this.form.submit()', class: "form-check-input" %>
      <% end %>
    </span>

    <%= link_to "Edit this task", edit_task_path(@task), class: "btn btn-primary mt-3" %>
  </div>
</div>
